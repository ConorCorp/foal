{
  "compilerOptions": {
    "outDir": "lib/",
    "module": "commonjs",
    "target": "es2021",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "lib": [
      "es2021",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}