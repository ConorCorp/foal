{
  "compilerOptions": {
    "outDir": "./lib/",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2021",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "./packages/**/index.ts",
    "./packages/**/src/**/*.ts",
    "./packages/**/src/**/*.tsx"
  ]
}